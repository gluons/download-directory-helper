{
	"name": "Download GitHub Directory",
	"description": "A Firefox add-on to use download-directory easily.",
	"version": "0.0.1",
	"manifest_version": 2,
	"icons": {
		"48": "assets/download-directory-48.png",
		"96": "assets/download-directory-96.png"
	},
	"applications": {
		"gecko": {
			"id": "download-directory-helper@gluons.github.io"
		}
	},
	"author": "Saran Tanpituckpong",
	"homepage_url": "https://github.com/gluons/download-directory-helper",
	"permissions": [
		"*://github.com/*",
		"activeTab"
	],
	"browser_action": {
		"default_icon": "assets/download-directory.svg",
		"default_title": "Download GitHub directory"
	},
	"background": {
		"scripts": ["background.js"]
	}
}
